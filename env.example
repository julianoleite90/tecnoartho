# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
SMTP_FROM=seu-email@gmail.com
NOTIFICATION_EMAIL=admin@joelhos-saudaveis.com

# Integrações de Marketing
# Mailchimp
MAILCHIMP_API_KEY=sua-api-key-aqui
MAILCHIMP_LIST_ID=sua-list-id-aqui

# RD Station
RD_STATION_PUBLIC_KEY=sua-public-key-aqui
RD_STATION_TOKEN=seu-token-aqui

# ActiveCampaign
ACTIVECAMPAIGN_API_KEY=sua-api-key-aqui
ACTIVECAMPAIGN_BASE_URL=https://sua-conta.api-us1.com

# HubSpot
HUBSPOT_ACCESS_TOKEN=seu-access-token-aqui

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=seu-access-token-aqui
WHATSAPP_PHONE_ID=seu-phone-id-aqui

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
FACEBOOK_PIXEL_ID=seu-pixel-id-aqui
HOTJAR_ID=seu-hotjar-id-aqui

# Configurações de Banco de Dados (opcional)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/joelhos_saudaveis

# Configurações de Segurança
JWT_SECRET=sua-chave-secreta-jwt
ENCRYPTION_KEY=sua-chave-de-criptografia

# Configurações de Cache (opcional)
REDIS_URL=redis://localhost:6379

# Configurações de Upload de Arquivos
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

